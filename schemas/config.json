{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "global": {
      "type": "object",
      "properties": {
        "non-local-bind": {
          "type": "boolean"
        }
      },
      "required": [
        "non-local-bind"
      ]
    },
    "links": {
      "type": "array",
      "items": [
        {
          "type": "object",
          "properties": {
            "name": {
              "type": "string",
              "default": "",
              "examples": [
                "eth0"
              ]
            },
            "type": {
              "type": "string",
              "enum": ["phy", "bond", "bridge", "vlan"],
              "default": "",
              "examples": [
                "phy",
                "vlan",
                "bond",
                "bridge"
              ]
            },
            "ips" : {
              "type" : "array",
              "items": [
                {
                  "$ref": "#/definitions/ip"
                }
              ]
            },
            "attributes": {
              "type": "object",
              "properties": {
                "dhcp": {
                  "type": "boolean"
                }
              },
              "required": [
                "dhcp"
              ]
            }
          },
          "required": [
            "name",
            "type"
          ]
        }
      ]
    }
  },
  "required": [
    "links"
  ],
  "definitions": {
    "ipv4": {
      "type" : "string",
      "format" : "ipv4"
    },
    "ipv6": {
      "type" : "string",
      "format" : "ipv6"
    },
    "ip":{
      "oneOf": [
        {"$ref": "#/definitions/ipv4"},
        {"$ref": "#/definitions/ipv6"}
      ],
      "default": null,
      "examples": [
      	"10.1.2.3"
      ]
    }
    
  }

}